<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Batch Code</title>
</head>

<body>
  <h1>Generate Batch Code</h1>
  <form action="/batchcode" method="post">
    <b>Center</b>
    <select>
      {{#each centers as |c|}}
      <option value="{{c.id}}">{{c.name}}</option>
      {{/each}}
    </select>
    </br>
    <b>Season</b>
    <select>
      {{#each seasons as |s|}}
      <option value="{{s.id}}">{{s.name}}</option>
      {{/each}}
    </select>
    </br>
    <b>Course</b>
    <select>
      {{#each courses as |u|}}
      <option value="{{u.id}}">{{u.name}}</option>
      {{/each}}
    </select>
    </br>
    <b>Year</b>
    <select>
      {{#each years as |y|}}
      <option value="{{y}}">{{y}}</option>
      {{/each}}
    </select>
    </br>
    <b>Batch No.</b>
    <input type="number" min="1" max="5">
  </form>
</body>

</html>